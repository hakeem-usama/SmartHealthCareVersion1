@model SmartHealthCare.Models.Appointment

<h2>Book Appointment</h2>
<form asp-action="BookAppointment" method="post">
    <div class="form-group">
        <label asp-for="DoctorID"></label>
        <input asp-for="DoctorID" class="form-control" />
        <span asp-validation-for="DoctorID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Time"></label>
        <input asp-for="Time" class="form-control" type="time" />
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Book Appointment</button>
</form>