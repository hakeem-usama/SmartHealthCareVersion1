@{
    ViewData["Title"] = "Doctor Dashboard";
}

<div class="container">
    <h2 class="text-primary mb-4">Doctor Dashboard</h2>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-check fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Appointments</h5>
                    <a href="@Url.Action("ViewAppointments", "Doctor")" class="btn btn-outline-info btn-block">View Appointments</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-notes-medical fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Patient Records</h5>
                    <a href="@Url.Action("ManageRecords", "Doctor")" class="btn btn-outline-success btn-block">Manage Records</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-prescription-bottle-alt fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Prescriptions</h5>
                    <a href="@Url.Action("Prescriptions", "Doctor")" class="btn btn-outline-primary btn-block">Manage Prescriptions</a>
                </div>
            </div>
        </div>
    </div>
</div>