@{
    ViewData["Title"] = "Administrator Dashboard";
}

<div class="container">
    <h2 class="text-primary mb-4">Administrator Dashboard</h2>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-user-md fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Manage Doctors</h5>
                    <a href="@Url.Action("ManageDoctors", "Admin")" class="btn btn-outline-info btn-block">View Doctors</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Manage Patients</h5>
                    <a href="@Url.Action("ManagePatients", "Admin")" class="btn btn-outline-success btn-block">View Patients</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-file-alt fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Generate Reports</h5>
                    <a href="@Url.Action("GenerateReports", "Admin")" class="btn btn-outline-primary btn-block">View Reports</a>
                </div>
            </div>
        </div>
    </div>
</div>